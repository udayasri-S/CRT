#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n;
    scanf("%d",&n);
    int a[n],i;
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    int se=0,so=0;
    for(i=0;i<n;i++)
    {
       if(a[i]%2==0)
       {
        se=se+a[i];   
       }
    else
    {
     so=so+a[i];
    }
    }
        printf("%d \n",so);
        printf("%d",se);
    
    return 0;
}
